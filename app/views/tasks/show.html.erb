<div class="container pt-5">
  <div class="card p-4 pb-4 mb-4">
    <h1 class="border-bottom mb-4"><%= @task.title %></h1>
    <p class="text-secondary"><%= @task.details %> </p>
      <% if @task.completed == true %>
      <p class="alert alert-success mb-0"><%= "This task is complete!" %></p>
      <% else %>
      <p class="alert alert-warning mb-0"><%= "This task is not completed yet." %></p>
      <%end%>
    </p>
    <div class="d-flex gap-2">
      <%= link_to "Back to list", index_path, class: "btn btn-secondary" %>
      <%= link_to "Edit task", edit_path, class: "btn btn-primary" %>
    </div>
  </div>

</div>
